{
  "name": "fasmext",
  "license": "MIT",
  "icon": "icons/fasm.png",
  "publisher": "MuhinBetenyaInc",
  "displayName": "FASM extension",
  "description": "FASM language extension for visual studio code",
  "version": "0.4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kostyabet/VSCode-FASM-ext.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:fasm",
    "onCommand:fasm.createConfigs",
    "onCommand:fasm.run"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fasm.createConfigs",
        "title": "FASM: Create Build Configuration"
      },
      {
        "command": "fasm.build",
        "title": "Run FASM",
        "icon": "$(play)"
      },
      {
        "command": "fasm.debug",
        "title": "Debug FASM",
        "icon": "$(debug-alt)"
      },
      {
        "command": "fasm.showDropdown",
        "title": "Select Run/Debug",
        "icon": "$(chevron-down)"
      },
      {
        "command": "fasm.run",
        "title": "Run Exe",
        "icon": "$(run-all)"
      }
    ],
    "keybindings": [
      {
        "command": "fasm.run",
        "key": "f9",
        "when": "editorTextFocus && resourceExtname == '.asm'"
      },
      {
        "command": "fasm.build",
        "key": "f5",
        "when": "editorTextFocus && resourceExtname == '.asm'"
      },
      {
        "command": "fasm.debug",
        "key": "ctrl+f5",
        "mac": "cmd+f5",
        "when": "editorTextFocus && resourceExtname == '.asm'"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "fasm.run",
          "group": "navigation@3",
          "when": "editorLangId"
        },
        {
          "command": "fasm.build",
          "group": "navigation",
          "when": "editorLangId == fasm && fasm.mode.run"
        },
        {
          "command": "fasm.debug",
          "group": "navigation",
          "when": "editorLangId == fasm && fasm.mode.debug"
        },
        {
          "command": "fasm.showDropdown",
          "group": "navigation@1",
          "when": "editorLangId == fasm "
        }
      ]
    },
    "languages": [
      {
        "id": "asm",
        "icon": {
          "light": "./icons/fasm.png",
          "dark": "./icons/fasm.png"
        }
      },
      {
        "id": "fasm",
        "aliases": [
          "Flat Assembler",
          "fasm"
        ],
        "extensions": [
          ".asm",
          ".ASM",
          ".inc",
          ".INC"
        ],
        "configuration": "./language-configuration.json",
        "filenames": [],
        "icon": {
          "light": "./icons/fasm.png",
          "dark": "./icons/fasm.png"
        }
      }
    ],
    "completionItemProvider": {
      "language": "fasm",
      "provider": "fasmCompletionProvider"
    },
    "grammars": [
      {
        "language": "fasm",
        "scopeName": "source.fasm",
        "path": "./syntaxes/fasm.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/unzipper": "^0.10.10",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.16.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.740.0",
    "tar": "^7.4.3",
    "unzipper": "^0.12.3",
    "vscode": "^1.1.37",
    "yarn": "^1.22.22"
  }
}
